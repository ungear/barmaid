{
  "name": "my-project",
  "description": "A Vue.js project",
  "version": "1.0.0",
  "author": "Mikhail Istomin <mikhail_istomin@epam.com>",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "dev:stats": "cross-env NODE_ENV=development webpack --json > dist/stats.json",
    "build:stats": "cross-env NODE_ENV=production webpack --json > dist/stats.json",
    "bundle-report": "webpack-bundle-analyzer dist/stats.json"
  },
  "dependencies": {
    "core-js": "^3.8.3",
    "firebase": "^10.7.1",
    "normalize.css": "^7.0.0",
    "vue": "^3.1.0",
    "vue-router": "^4.2.5",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/compiler-sfc": "^3.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3",
    "sass": "^1.69.6",
    "sass-loader": "^13.3.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {
      "vue/multi-word-component-names": 0,
      "vue/no-use-v-if-with-v-for": 0,
      "vue/no-unused-components": 0,
      "vue/no-parsing-error": 0,
      "no-unused-vars": 0,
      "no-debugger": 0
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
